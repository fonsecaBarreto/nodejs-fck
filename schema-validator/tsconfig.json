{
    "compilerOptions": {
        "outDir": "lib",
        "module": "commonjs",
        "target": "es2019", 
        "declaration": true,                             
        "declarationMap": true,                          
        "sourceMap": true,  
        "allowJs": true,                                                         
        "esModuleInterop": true,                          
        "strict": true,                                  
        "skipLibCheck": true,                            
        "baseUrl": ".",
        "rootDirs": ["src", "tests"],
        "paths": {
            "@/*": [ "./src/*" ],
            "@tests/*": [  "./tests/*"  ]
        },

/*      "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true */
    },
    "typeRoots": [
        "./@types",
        "./node_modules/@types"
    ],
    "include": ["src", "tests"],
    "exclude": ["node_modules"]
}