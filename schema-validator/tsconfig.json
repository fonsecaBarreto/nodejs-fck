{
    "compilerOptions": {
        "outDir": "lib",
        "target": "es2019",
        "jsx": "react-jsx",     
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,                             
        "declarationMap": true,                          
        "sourceMap": true,                                                           
        "esModuleInterop": true,                          
        "strict": true,                                  
        "skipLibCheck": true,                            
        "rootDirs": ["src", "tests"],
        "baseUrl": "src",
        "paths": {
            "@/*": [ "*" ],
            "@tests/*": [  "../tests/*"  ]
        },
        "allowJs": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src", "tests"],
    "exclude": ["node_modules"]
}